<Window x:Class="LAB2.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LAB2"
        mc:Ignorable="d"
        Title="Login" Height="450" Width="800">
    <Grid Margin="20" >
        <StackPanel>
            <TextBlock Text="Nombre de usuario:"/>
            <TextBox x:Name="txtUsername" Margin="0,5,0,15"/>
            <TextBlock Text="Contraseña:"/>
            <PasswordBox x:Name="txtPassword" Margin="0,5,0,15"/>
            <Button Content="Iniciar sesión" Click="Login_Click" Width="100"/>
        </StackPanel>
    </Grid>
</Window>
