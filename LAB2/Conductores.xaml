<Window x:Class="LAB2.Conductores"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LAB2"
        mc:Ignorable="d"
        Title="Conductores" Height="450" Width="800">
    <Grid>
        <StackPanel Margin="20">
            <TextBlock Text="Nombre del conductor:"/>
            <TextBox x:Name="txtNombreConductor"/>
            <TextBlock Text="Licencia:"/>
            <TextBox x:Name="txtLicencia"/>
            <TextBlock Text="Transporte:"/>
            <TextBox x:Name="txtTransporte"/>
            <Button Content="Guardar" Click="Guardar_Click" HorizontalAlignment="Center" Margin="0,20,0,0"/>
            <Button Content="Listar" Click="Listar_Click" HorizontalAlignment="Center" Margin="9,20,0,0"/>
        </StackPanel>
    </Grid>
</Window>
